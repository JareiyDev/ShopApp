<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.5"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_launcher_background"/>

    <ImageView
        android:id="@+id/save"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:background="@drawable/background_icon2"
        app:layout_constraintTop_toTopOf="@id/image"
        app:layout_constraintEnd_toEndOf="@id/image"
        android:src="@drawable/ic_save"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaaaaaaaa"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaaaaaaaa"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/dess"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaaaaaaaa"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/dess"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/prices"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaaaaaaaa"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/rate"/>
    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintEnd_toStartOf="@id/rate"
        app:layout_constraintTop_toTopOf="@id/rate"
        app:layout_constraintBottom_toBottomOf="@id/rate"
        android:src="@drawable/ic_star"
        android:layout_marginEnd="3dp"/>
    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintEnd_toStartOf="@id/other"
        app:layout_constraintTop_toTopOf="@id/other"
        app:layout_constraintBottom_toBottomOf="@id/other"
        android:src="@drawable/ic_champion"
        android:layout_marginEnd="3dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaaaaaaaa"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/prices"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/other"/>

</androidx.constraintlayout.widget.ConstraintLayout>